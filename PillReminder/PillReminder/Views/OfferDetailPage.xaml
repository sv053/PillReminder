<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillReminder.Views.OfferDetailPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Visual="Material" >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="15" >

                <Label Text="{Binding Offer.TITLE}" 
                       Margin="10"
                        FontSize="Title"
                       HorizontalTextAlignment="Center"/>
                <Label Text="{Binding Offer.DESCRIPTION}" 
                       TextType="Html" 
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       />
                <!--<WebView Source="{Binding Offer.LINK}" Margin="10"/>
                <WebView Source="{Binding Offer.DESCRIPTION}" Margin="10"/>-->
               


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>