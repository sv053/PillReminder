<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillReminder.Views.NewsDetailPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Visual="Material" >
    
    
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Spacing="20" Padding="15" >
            
            <Label Text="{Binding News.TITLE}" Margin="10"
                   FontSize="Title" HorizontalTextAlignment="Center"/>

                <!--<WebView Source="{Binding News.LINK}" Margin="10"/>
                <WebView Source="{Binding News.DESCRIPTION}" Margin="10"/>-->
                <Label Text="{Binding News.DESCRIPTION}" 
                       TextType="Html" HorizontalTextAlignment="Center"/>


            </StackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>