<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillReminder.Views.TermDetailPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
    Visual="Material" >
    <ScrollView>
        <StackLayout Spacing="20" Padding="15" >

            <Label Text="{Binding Ter.TITLE}" FontSize="Title" />

            <Label TextType="Html" Text="{Binding Ter.DESCRIPTION}" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" FontSize="Medium" />

        </StackLayout>
    </ScrollView>
</ContentPage>